<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
                 xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0">

  <reference id="dataBroker" interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"/>

  <reference id="encryService" interface="org.opendaylight.aaa.encrypt.AAAEncryptionService"/>

  <odl:clustered-app-config id="idmConfig" default-config-file-name="idm-config.xml"
        binding-class="org.opendaylight.yang.gen.v1.config.aaa.idm.store.config.rev170517.IdmConfig">
  </odl:clustered-app-config>

  <bean id="IdmLightProxy" class="org.opendaylight.aaa.idm.IdmLightProxy">
  </bean>

  <service ref="IdmLightProxy" interface="org.opendaylight.aaa.api.IdMService" odl:type="default"/>
  <service ref="IdmLightProxy" interface="org.opendaylight.aaa.api.CredentialAuth" odl:type="default"/>

  <bean id="AAAIDMLight" class="org.opendaylight.aaa.idm.AaaIdmLight" init-method="initializeStore">
      <argument ref="idmConfig"/>
      <argument ref="dataBroker"/>
      <argument ref="encryService"/>
  </bean>

</blueprint>