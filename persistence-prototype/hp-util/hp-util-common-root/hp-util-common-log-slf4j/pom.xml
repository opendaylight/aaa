<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.hp</groupId>
    <artifactId>hp-util-common-root</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>hp-util-common-log-slf4j</artifactId>
  <packaging>jar</packaging>

  <name>hp-util-common-log-slf4j</name>
  <description>Log implementation that uses sl4j</description>

  <dependencies>
    <dependency>
      <groupId>com.hp</groupId>
      <artifactId>hp-util-common</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j-api.version}</version>
    </dependency>
    <!-- 
      See http://java.dzone.com/articles/how-configure-slf4j-different 
      for information on different implementations of slf4j.
      In this case log4j is being used as the implementation of slf4j
    --> 
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>${log4j.version}</version>
    </dependency>
    <dependency>
      <!-- This dependency is needed at runtime by log4j --> 
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>${slf4j-log4j12.version}</version>
      <scope>runtime</scope>
    </dependency>		
  </dependencies>

</project>
